{
	"compilerOptions": {
		"strict": true,
		"module": "es6",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"target": "es6",
		"experimentalDecorators": true,
		"baseUrl": ".",
		"paths": {
			"@/src/*": ["src/*"]
		}
	},
	"include": [
		"**/src/**/*.ts",
		"*.ts",
		"**.js"
	]
}
